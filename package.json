{
  "name": "shutter",
  "version": "0.0.5",
  "description": "Save webcam videos with the MediaRecorder API",
  "main": "./dist/main.js",
  "scripts": {
    "start": "webpack-dev-server --progress --colors --hot --config ./webpack.config.js",
    "watch": "webpack --watch",
    "build": "webpack --config ./webpack.config.js",
    "prepublish": "npm run babel",
    "babel": "babel --presets es2015,stage-2 --out-file dist/main.js src/"
  },
  "keywords": [
    "webcam",
    "record",
    "webrtc",
    "mediarecorder"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carnye/shutter.git"
  },
  "author": "Sean Carney",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/carnye/shutter/issues"
  },
  "homepage": "https://github.com/carnye/shutter#readme",
  "dependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.10.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-2": "^6.5.0",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "webrtc-adapter": "^1.4.0"
  },
  "devDependencies": {
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^1.5.3",
    "eslint-plugin-react": "^5.2.2"
  }
}
